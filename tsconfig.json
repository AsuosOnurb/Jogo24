{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "esnext"
    ],
  },
  "exclude": [
    "dist",
    "webpack",
    "pwa",
    "./src/scripts/backend/BackendUtils.js",
    "./src/scripts/backend/AlignGrid.js",
    "*.js",
    "**.js"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src/scripts/scenes/MainMenu.ts"
    ],
    "out": "./docs",
    "exclude": [
      "dist",
      "node_modules"
    ],
    "mode": "modules"
  }
}